@model IEnumerable<BooksViewModel>

@{
    ViewData["Title"] = "Boeken";
}

<h2>Boeken</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
      <tr>
        <th>
          @Html.DisplayNameFor(model => model.TitleName)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.SeriesName)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.Author.Name)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.Language)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.Publisher)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.SerialNumber)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.Isbn)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.ReleasedYear)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
      </tr>
    </thead>
    <tbody>
  @foreach (var item in Model) {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.TitleName)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.SeriesName)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Author.Name)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Language)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Publisher)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.SerialNumber)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Isbn)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.ReleasedYear)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
          <a asp-action="Edit" asp-route-id="@item.BookId">Edit</a> |
          <a asp-action="Details" asp-route-id="@item.BookId">Details</a> |
          <a asp-action="Delete" asp-route-id="@item.BookId">Delete</a>
        </td>
      </tr>
}
    </tbody>
</table>
